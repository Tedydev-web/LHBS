@model ClientViewModel
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Id) ? "Add New Client" : "Edit Client";
}

<h3 class="text-capitalize mb-sm-0 fw600">@ViewData["Title"]</h3>
<form asp-controller="Home" asp-action="Edit" method="post">
    <div class="bg-white rounded-4 p-3 p-lg-4 mt-2 shadow-sm">
        <div class="row mb-2">
            <div class="col-lg-2">
                <label asp-for="Name" class="form-label fw-bold required"></label>
            </div>
            <div class="col-lg-10">
                <input asp-for="Name" class="form-control" />
                <div class="text-danger"><span asp-validation-for="Name"></span></div>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-lg-2">
                <label asp-for="EmailAddress" class="form-label fw-bold required"></label>
            </div>
            <div class="col-lg-10">
                <input asp-for="EmailAddress" class="form-control" />
                <div class="text-danger"><span asp-validation-for="EmailAddress"></span></div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                <label asp-for="Notes" class="form-label fw-bold"></label>
            </div>
            <div class="col-lg-10">
                <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                <div class="text-danger"><span asp-validation-for="Notes"></span></div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>
