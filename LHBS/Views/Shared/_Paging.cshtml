<div class="row justify-content-between align-items-center fs-16 mb-2" data-table-totalpg="@TotalPages">
    <div class="col-md-6">
        @showingFrom - @showingTo of @TotalItems Records
    </div>
    <div class="col-md-6 text-start text-md-end pt-2 pt-md-0">
        <nav class="d-inline-block" aria-label="Page navigation">
            <ul class="pagination m-0">
                @if (CurrentPageNumber > 1)
                {
                    <li class="page-item me-1">
                        <a onclick="changePage('@previousPage',this)" class="rounded-circle fs-6 border bg-transparent cursor-pointer text-decoration-none d-flex justify-content-center align-items-center">&lt;</a>
                    </li>
                }
                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item me-1 @(i == CurrentPageNumber ? "active" : "")">
                        <a onclick="changePage('@i',this)" class="rounded-circle fs-6 border @(i == CurrentPageNumber ? "bg-light fw-bold" : "bg-transparent") cursor-pointer text-decoration-none d-flex justify-content-center align-items-center">@i</a>
                    </li>
                }
                @if (CurrentPageNumber < TotalPages)
                {
                    <li class="page-item">
                        <a onclick="changePage('@nextPage',this)" class="rounded-circle fs-6 border bg-transparent cursor-pointer text-decoration-none d-flex justify-content-center align-items-center">&gt;</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
