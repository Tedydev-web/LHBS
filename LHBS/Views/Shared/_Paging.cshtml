@{
    int CurrentPageNumber = ViewData["PageIndex"] != null ? Convert.ToInt32(ViewData["PageIndex"]) : 0;
    int TotalPages = ViewData["TotalPages"] != null ? Convert.ToInt32(ViewData["TotalPages"]) : 0;
    int TotalItems = ViewData["TotalItems"] != null ? Convert.ToInt32(ViewData["TotalItems"]) : 0;
    int showingFrom = ViewData["ShowingFrom"] != null ? Convert.ToInt32(ViewData["ShowingFrom"]) : 0;
    int showingTo = ViewData["ShowingTo"] != null ? Convert.ToInt32(ViewData["ShowingTo"]) : 0;
    bool HasPreviousPage = false;
    bool HasNextPage = false;
    if (ViewData["HasPreviousPage"] != null)
    {
        bool.TryParse(ViewData["HasPreviousPage"]?.ToString(), out HasPreviousPage);
    }
    if (ViewData["HasNextPage"] != null)
    {
        bool.TryParse(ViewData["HasNextPage"]?.ToString(), out HasNextPage);
    }
    int previousPage = CurrentPageNumber - 1;
    int nextPage = CurrentPageNumber + 1;
    int maxVisibleButtons = 10;
    int startPage = Math.Max(1, CurrentPageNumber - (maxVisibleButtons / 2));
    int endPage = Math.Min(TotalPages, startPage + (maxVisibleButtons - 1));
    // Adjust startPage if there are less than maxVisibleButtons pages at the end
    if (endPage - startPage + 1 < maxVisibleButtons)
    {
        startPage = Math.Max(1, endPage - maxVisibleButtons + 1);
    }
    // Adjust endPage if there are less than maxVisibleButtons pages at the start
    if (endPage - startPage + 1 < maxVisibleButtons)
    {
        endPage = Math.Min(TotalPages, startPage + maxVisibleButtons - 1);
    }
}
